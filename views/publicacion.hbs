<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="assets/Imagenes/tierra.ico" type="image/x-icon" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="./js/jquery-3.6.0.js"></script>

    <title>Publicacion</title>
    
  </head>
  <body>

    <div class="container-fluid pb-2 bg-light">
      <div class="row mb-5">
        <div class="col">
          <h1 class="display-1 text-center fw-bold p-3 bg-dark text-white">
            Publicacion
          </h1>
        </div>
      </div>
   <!-- Navegador -->
      {{> navegador }}

      <div class="row bg-info">

        <div class="col m-4">
          <div class="card">
            <div class="card-body border border-success rounded">
              <h3 class="card-title">
                Título: {{titulo}}
              </h3>
              <p class="card-text"><strong> Autor: </strong>{{nombre}}</p>
              <p class="card-text"><strong> Categoria:</strong> {{categoria}}</p>
              <p class="card-text"><strong>Descripción:</strong>  {{descripcion}}</p>
              <p class="card-text"><strong>Fecha: </strong> {{fecha}}</p>
              <p class="alert alert-info"><a class="btn btn-primary" href="{{link}}.html">ver archivo</a></p>


            </div>
          </div>
        </div>
 <!-- footer -->
      {{> footer }}
      </div>   

  </body>
</html>